def is_power_of_two(num):
    if num == 1:
        return True
    elif num < 0 or num % 2 != 0:
        return False
    else:
        return is_power_of_two(num//2)

print(is_power_of_two(5))
print(is_power_of_two(4))
print(is_power_of_two(16))
print(is_power_of_two(1))
print(is_power_of_two(-4))
